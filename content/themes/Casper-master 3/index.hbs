{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
        <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Subscribe</a>
        <a class="about-me-button" href="/author/about-me">About Me</a>
        <a class="about-me-button" href="/projects">Projects</a>
        <a class="about-me-button scroll-down" href="#content">Blog</a>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>

            <a href="https://github.com/essamjoubori"><img src="https://s3.amazonaws.com/essamio/github-48.png"></a>
            <a href="https://angel.co/essamjoubori"><img src="https://s3.amazonaws.com/essamio/angellist-48.png"></a>
            <a href="https://www.linkedin.com/in/essamjoubori"><img src="https://s3.amazonaws.com/essamio/linkedin-48.png"></a>
            <a href="https://twitter.com/essamio"><img src="https://s3.amazonaws.com/essamio/twitter-48.png"></a>
            <a href="mailto:essam.joubori@gmail.com"><img src="https://s3.amazonaws.com/essamio/gmail-48.png"></a>


        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>